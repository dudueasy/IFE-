    <div>您输入的值是:<span id="aqi_display">尚无录入</span></div>

    <script>
        window.onload = function() {
            var button = document.getElementById("button");
            button.onclick = displayInput;
        }

        function displayInput() {
            var value = document.getElementById("aqi_input").value;
            var display = document.getElementById("aqi_display");
            display.innerHTML = value;
        }
    </script>

